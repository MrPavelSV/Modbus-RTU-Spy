<Window x:Class="modbus_rtu_spy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:modbus_rtu_spy"
        mc:Ignorable="d"
        Title="ModBus RTU Spy" Height="640" Width="800">
    <Grid>
        <GroupBox VerticalAlignment="Top" HorizontalAlignment="Left" Height="336">
            <GroupBox.Header>
                <Label>Port settings</Label>
            </GroupBox.Header>
            <Grid>
                <Label Content="Port" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
                <ComboBox Name="cbx_Port" HorizontalAlignment="Left" Margin="132,10,0,0" VerticalAlignment="Top" Width="120" IsReadOnly="True" FontFamily="Consolas"/>
                <Label Content="Speed" HorizontalAlignment="Left" Margin="0,40,0,0" VerticalAlignment="Top"/>
                <ComboBox Name="cbx_Speed" HorizontalAlignment="Left" Margin="132,40,0,0" VerticalAlignment="Top" Width="120" IsReadOnly="True" FontFamily="Consolas" SelectedIndex="6">
                    <ComboBoxItem Content="300" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="600" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="1200" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="2400" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="4800" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="9600" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="19200" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="38400" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="57600" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="115200" HorizontalAlignment="Left" Width="118"/>
                </ComboBox>
                <Label Content="Data" HorizontalAlignment="Left" Margin="0,70,0,0" VerticalAlignment="Top"/>
                <ComboBox Name="cbx_Data" HorizontalAlignment="Left" Margin="132,70,0,0" VerticalAlignment="Top" Width="120" IsReadOnly="True" FontFamily="Consolas" SelectedIndex="3">
                    <ComboBoxItem Content="5" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="6" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="7" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="8" HorizontalAlignment="Left" Width="118"/>
                </ComboBox>                
                <Label Content="Parity" HorizontalAlignment="Left" Margin="0,100,0,0" VerticalAlignment="Top"/>
                <ComboBox Name="cbx_Parity" HorizontalAlignment="Left" Margin="132,100,0,0" VerticalAlignment="Top" Width="120" IsReadOnly="True" FontFamily="Consolas" SelectedIndex="2">
                    <ComboBoxItem Content="Even" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="Mark" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="None" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="Odd" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="Space" HorizontalAlignment="Left" Width="118"/>
                </ComboBox>
                <Label Content="StopBits" HorizontalAlignment="Left" Margin="0,130,0,0" VerticalAlignment="Top"/>
                <ComboBox  Name="cbx_StopBits" HorizontalAlignment="Left" Margin="132,130,0,0" VerticalAlignment="Top" Width="120" IsReadOnly="True" FontFamily="Consolas" SelectedIndex="0">
                    <ComboBoxItem Content="One" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="OnePointFive" HorizontalAlignment="Left" Width="118"/>
                    <ComboBoxItem Content="Two" HorizontalAlignment="Left" Width="118"/>
                </ComboBox>
                <Button Name="Open_port"  Content="Open" HorizontalAlignment="Left" Margin="38,194,0,0" VerticalAlignment="Top" Width="75" Click="OpenComPort"/>
                <Button Name="Close_port" Content="Close" HorizontalAlignment="Left" Margin="156,194,0,0" VerticalAlignment="Top" Width="74" Click="CloseComPort"/>
                <Button Name="Clear_text" Content="Clear" HorizontalAlignment="Left" Margin="100,230,0,0" VerticalAlignment="Top" Width="74" Click="Clear"/>
                <Label Content="Capture period (ms)" HorizontalAlignment="Left" Margin="0,160,0,0" VerticalAlignment="Top"/>
                <TextBox Name ="Capptextb" HorizontalAlignment="Left" Height="23" Margin="132,160,0,0" VerticalAlignment="Top" Width="118" FontFamily="Consolas" VerticalContentAlignment="Center" Text="3000" TextChanged="Capptextb_TextChanged"/>
                <Label Name ="lastframeidxlabel" Content="" HorizontalAlignment="Left" Margin="10,266,0,0" VerticalAlignment="Top" Width="60"/>
                <Label Name ="countidxlabel" Content="" HorizontalAlignment="Left" Margin="100,266,0,0" VerticalAlignment="Top" Width="60"/>
                <Label Name ="differencelabel" Content="" HorizontalAlignment="Left" Margin="190,266,0,0" VerticalAlignment="Top" Width="60"/>
            </Grid>
        </GroupBox>
        <RichTextBox Name="rtextbox" HorizontalAlignment="Left" Margin="269,10,0,0" VerticalAlignment="Top" FontFamily="Consolas" VerticalScrollBarVisibility="Auto">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
